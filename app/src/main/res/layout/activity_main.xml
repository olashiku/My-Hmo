<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        tools:context=".views.activity.MainActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 android:id="@+id/content" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintBottom_toTopOf="@+id/tabLayout"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent"
      android:layout_height="60dp"
      app:layout_constraintEnd_toEndOf="parent"
       app:itemIconSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
         app:menu="@menu/bottom_navigation_menu"
          app:itemTextAppearanceInactive="@style/BottomNavigationViewInactive"
           app:itemTextAppearanceActive="@style/BottomNavigationViewActive"
            app:labelVisibilityMode="labeled"
             app:elevation="8dp"
            app:itemRippleColor="@color/primaryblue"
            app:itemTextColor="@color/bnv_tab_item_foreground"
            android:background="@drawable/bottom_navigation_background"
             app:itemIconTint="@drawable/selector"
             android:id="@+id/tabLayout">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>