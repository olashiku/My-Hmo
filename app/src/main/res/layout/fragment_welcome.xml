<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:background="@color/primaryblue"
             tools:context=".views.fragment.outsidefragment.WelcomeFragment">


    <TextView
            android:text="Welcome Oluwayemisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3" android:fontFamily="@font/poppinsbold" android:textColor="@color/white"
            android:textSize="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.497"/>


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="0dp"
                                                       android:background="@drawable/whitecurvebg"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       android:layout_marginTop="24dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
                android:src="@drawable/welcomeimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/imageView3" app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.22000003"/>
        <TextView
                android:text="Welcome User!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView4" android:fontFamily="@font/montserratsemibold" android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.498"/>
        <TextView
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever."
                android:layout_width="0dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textView6" android:fontFamily="@font/poppinsregular" android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginTop="36dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
                android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Go to dashboard"
                android:layout_width="144dp"
                android:background="@drawable/buttonbackground"
                android:layout_height="37dp"
                android:id="@+id/toDashboardButton" android:textAllCaps="false"
                android:fontFamily="@font/montserratregular" android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6" android:textColor="@color/white"
                android:padding="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>