<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/primaryblue</item>
        <item name="colorPrimaryDark">@color/primaryblue</item>
        <item name="colorAccent">@color/primaryblue</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="ThemeOverlay.ActionBar" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppinsregular</item>
    </style>


    <style name="MyCustomTheme" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="freshchatChannelNameTextStyle">@style/CustomChannelNameTextStyle</item>
    </style>

    <style name="CustomChannelNameTextStyle" parent="Widget.Freshchat.ChannelName">
        <item name="android:textAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="Theme.Freshchat.SelectedTheme" parent="MyCustomTheme" />

    <style name="MyCustomTextAppearance" parent="android:TextAppearance">
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Theme.AppLib.ActionBar.Solid" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/primaryblue</item>
        <item name="titleTextStyle">@style/Theme.AppLib.ActionBar.TitleTextStyle</item>
    </style>
    <style name="Theme.AppLib.ActionBar.TitleTextStyle" parent="">
        <item name="android:textColor">@color/primaryblue</item>
        <item name="android:textSize">18sp</item>
    </style>


        <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowIsTranslucent">false</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">false</item>

        </style>

    <style name="BottomNavigationViewActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#90ee09</item>
    </style>

    <style name="BottomNavigationViewInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
            parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
            parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker" >
        <item name="android:colorControlActivated">#DB495A</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>


    <style name="ExposedDropdownMenu"
            parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- color of box ONLY, not dropdown -->
        <item name="boxBackgroundColor">@color/white</item>
        <!-- the box outline color depending on state
             (default, enabled, hovered, focused, but NOT error) -->
        <item name="boxStrokeColor">@color/grey</item>
        <!-- the box outline color just for errors -->
        <item name="boxStrokeErrorColor">@android:color/holo_red_dark</item>
        <!-- enable 8dp space below the box for error message -->
        <item name="errorEnabled">true</item>
        <!-- the hint INSIDE the box, before focusing the TextInputEditText -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <!-- the hint ON TOP of the box, when the TextInputEditText is focused -->
        <item name="hintTextColor">@color/colorPrimary</item>
        <!-- Gain access to additional styling for the child AutoCompleteTextView,
             which includes this spinner's dropdown/popup menu -->
    </style>


